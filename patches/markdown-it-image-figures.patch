+import type { MarkdownExit } from 'markdown-exit';
+
+export interface ImageFiguresOptions {
+	/**
+	 * Add data-type="image" attribute to figure element
+	 */
+	dataType?: boolean;
+
+	/**
+	 * Wrap image in a link to the image source
+	 */
+	link?: boolean;
+
+	/**
+	 * Generate figcaption from image alt text or title
+	 * - true: use title attribute
+	 * - false: no figcaption
+	 * - 'alt': use alt text
+	 * - 'title': use title attribute
+	 */
+	figcaption?: boolean | 'alt' | 'title';
+
+	/**
+	 * Copy attributes matching this pattern from img to figure
+	 * - true: copy all attributes
+	 * - string: regex pattern to match attribute names
+	 */
+	copyAttrs?: boolean | string;
+
+	/**
+	 * Add incremental tabindex to each figure
+	 */
+	tabindex?: boolean;
+
+	/**
+	 * Add loading="lazy" to images
+	 */
+	lazy?: boolean;
+
+	/**
+	 * Add decoding="async" to images
+	 */
+	async?: boolean;
+
+	/**
+	 * Add classes to image element
+	 */
+	classes?: string;
+
+	/**
+	 * Move src to data-src attribute (for lazy loading libraries)
+	 */
+	removeSrc?: boolean;
+}
+
+/**
+ * Markdown-it plugin to render images as figure elements with optional figcaption
+ */
+declare function imageFiguresPlugin(md: MarkdownExit, options?: ImageFiguresOptions): void;
+
+export default imageFiguresPlugin;
